{
  "name": "pulselog",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@supabase/supabase-js": "^2.57.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "child_process": "^1.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "electron-is-dev": "^3.0.1",
    "get-windows": "^9.2.3",
    "lucide-react": "^0.544.0",
    "node-fetch": "^2.7.0",
    "node-window-manager": "^2.2.4",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "ps-list": "^8.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-scripts": "5.0.1",
    "systeminformation": "^5.27.10",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^9.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run start\" \"npm run electron:start\"",
    "electron:start": "wait-on tcp:3000 && electron .",
    "electron:build": "node build-electron.js",
    "electron:build:portable": "node build-portable.js",
    "electron:build:simple": "npm run clean && npm run build && electron-builder --win --config.compression=store --config.win.target=portable",
    "electron:build:dir": "node build-dir.js",
    "electron:bu`ild:legacy": "npm run build && npm run electron:package",
    "electron:package": "electron-builder -c.extraMetadata.main=build/main.js",
    "build:win": "npm run build && npx electron-packager . \"Pulselog\" --platform=win32 --arch=x64 --out=dist-packager --overwrite --icon=public/pulselog.png",
    "create-mac-icon": "node scripts/create-mac-icon.js",
    "build:mac-optimized": "node build-mac-optimized.js",
    "build:mac-intel": "npm run create-mac-icon && npm run build && npx electron-packager . \"Pulselog\" --platform=darwin --arch=x64 --out=dist-mac --overwrite --icon=public/pulselog.png",
    "build:mac-silicon": "npm run create-mac-icon && npm run build && npx electron-packager . \"Pulselog\" --platform=darwin --arch=arm64 --out=dist-mac --overwrite --icon=public/pulselog.png",
    "build:mac-all": "npm run build:mac-intel && npm run build:mac-silicon",
    "build:all": "npm run build:win && npm run build:mac-all",
    "clean": "rimraf dist build",
    "prebuild": "npm run clean"
  },
  "build": {
    "extends": null,
    "appId": "com.tracking.electron-cra",
    "productName": "Pulselog",
    "compression": "maximum",
    "icon": "public/pulselog.png",
    "files": [
      "build/**/*",
      "public/main.js",
      "public/preload.js",
      "package.json",
      "!node_modules/**/*",
      "node_modules/@electron/**/*",
      "node_modules/@radix-ui/**/*",
      "node_modules/@supabase/**/*",
      "node_modules/child_process/**/*",
      "node_modules/class-variance-authority/**/*",
      "node_modules/clsx/**/*",
      "node_modules/dotenv/**/*",
      "node_modules/electron-is-dev/**/*",
      "node_modules/get-windows/**/*",
      "node_modules/lucide-react/**/*",
      "node_modules/node-fetch/**/*",
      "node_modules/node-window-manager/**/*",
      "node_modules/os/**/*",
      "node_modules/path/**/*",
      "node_modules/ps-list/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*",
      "node_modules/systeminformation/**/*",
      "node_modules/tailwind-merge/**/*",
      "node_modules/tailwindcss-animate/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "extraResources": [
      "!node_modules/.cache/**/*"
    ],
    "extraMetadata": {
      "main": "build/main.js"
    },
    "icon": "public/pulselog.png",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "gatekeeperAssess": false,
      "identity": "Developer ID Application: Ebubeker Rexha (7MQMPR6BB5)",
      "icon": "public/pulselog.png"
    },
    "afterSign": "scripts/notarize.js",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/pulselog.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/pulselog.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.0",
    "@types/node": "^24.5.2",
    "autoprefixer": "^10.4.21",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17"
  }
}
